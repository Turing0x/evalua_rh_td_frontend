---
import Layout from "../layouts/Layout.astro";
import InfoSection from "../components/InfoSection.astro";

import { area_data } from "../data/questionnaireData";
import QuestionnaireSection from "../components/QuestionnaireSection.astro";
import type { Area } from "../interfaces/area.interface";

const security: Area = area_data[3];
---

<Layout title="Cuestionario de Competencias Digitales">
  <div class="split-layout">
    <InfoSection
      title={security.title}
      description={security.description}
      image={security.image}
    />
    <QuestionnaireSection section={security.sections[0]} />
  </div>
</Layout>

<style>
  .split-layout {
    display: grid;
    grid-template-columns: 1fr 2fr;
    min-height: 100vh;
  }

  @media (max-width: 1024px) {
    .split-layout {
      grid-template-columns: 1fr;
    }
  }
</style>
