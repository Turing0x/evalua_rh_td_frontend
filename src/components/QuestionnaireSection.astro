---
import type { Section } from "../interfaces/area.interface";

interface Props {
  section: Section;
  prev: string;
  next: string;
}

const { section, prev, next } = Astro.props;
---

<div class="bg-gray-50 p-8 lg:p-12">
  <div class="w-full mx-auto">
    <form class="grid grid-cols-2 gap-4">
      {
        section.questions.map((question, index) => (
          <div class="bg-white p-6 rounded-lg shadow-sm">
            <div class="mb-6">
              <h4 class="text-xl font-semibold text-gray-900 mb-2">
                {question.text}
              </h4>
              <p class="text-lg text-gray-600">{question.description}</p>
            </div>
            <div class="space-y-3">
              {section.questions[index].option_type === "type_1" ? (
                  <label class="flex items-center space-x-3 p-3 rounded-lg border border-gray-200 hover:border-primary hover:bg-primary/5 cursor-pointer transition-colors">
                    <input
                      class="w-4 h-4 text-primary"
                      type="radio"
                      name='nunca'
                      value="1"
                    />
                    <span class="text-gray-700">Nunca</span>
                  </label>
                  <label class="flex items-center space-x-3 p-3 rounded-lg border border-gray-200 hover:border-primary hover:bg-primary/5 cursor-pointer transition-colors">
                    <input
                      class="w-4 h-4 text-primary"
                      type="radio"
                      name='nunca'
                      value="2"
                    />
                    <span class="text-gray-700">Raramente</span>
                  </label>
                  <label class="flex items-center space-x-3 p-3 rounded-lg border border-gray-200 hover:border-primary hover:bg-primary/5 cursor-pointer transition-colors">
                    <input
                      class="w-4 h-4 text-primary"
                      type="radio"
                      name='nunca'
                      value="3"
                    />
                    <span class="text-gray-700">A veces</span>
                  </label>
                  <label class="flex items-center space-x-3 p-3 rounded-lg border border-gray-200 hover:border-primary hover:bg-primary/5 cursor-pointer transition-colors">
                    <input
                      class="w-4 h-4 text-primary"
                      type="radio"
                      name='nunca'
                      value="4"
                    />
                    <span class="text-gray-700">Frecuentemente</span>
                  </label>
                  <label class="flex items-center space-x-3 p-3 rounded-lg border border-gray-200 hover:border-primary hover:bg-primary/5 cursor-pointer transition-colors">
                    <input
                      class="w-4 h-4 text-primary"
                      type="radio"
                      name='nunca'
                      value="5"
                    />
                    <span class="text-gray-700">Siempre</span>
                  </label>
              ) : (
                  <label class="flex items-center space-x-3 p-3 rounded-lg border border-gray-200 hover:border-primary hover:bg-primary/5 cursor-pointer transition-colors">
                    <input type="radio" name='nunca' value="1" />
                    <span>Principiante</span>
                  </label>
                  <label class="flex items-center space-x-3 p-3 rounded-lg border border-gray-200 hover:border-primary hover:bg-primary/5 cursor-pointer transition-colors">
                    <input type="radio" name='nunca' value="2" />
                    <span>Básico</span>
                  </label>
                  <label class="flex items-center space-x-3 p-3 rounded-lg border border-gray-200 hover:border-primary hover:bg-primary/5 cursor-pointer transition-colors">
                    <input type="radio" name='nunca' value="3" />
                    <span>Intermedio</span>
                  </label>
                  <label class="flex items-center space-x-3 p-3 rounded-lg border border-gray-200 hover:border-primary hover:bg-primary/5 cursor-pointer transition-colors">
                    <input type="radio" name='nunca' value="4" />
                    <span>Avanzado</span>
                  </label>
                  <label class="flex items-center space-x-3 p-3 rounded-lg border border-gray-200 hover:border-primary hover:bg-primary/5 cursor-pointer transition-colors">
                    <input type="radio" name='nunca' value="5" />
                    <span>Experto</span>
                  </label>
              )}
            </div>
          </div>
        ))
      }
    </form>
    <div class="flex justify-between items-center pt-6">
      <a
        href={prev}
        class="text-gray-600 hover:text-gray-900 font-medium cursor-pointer"
      >
        ← Anterior
      </a>
      <a
      href={next}
        class="bg-primary text-white px-8 py-3 rounded-lg font-semibold hover:bg-primary/90 transition-colors cursor-pointer"
      >
        Siguiente →
      </a>
    </div>
  </div>
</div>
