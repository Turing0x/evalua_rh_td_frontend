---
interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<div class="bg-white p-8 lg:p-12 flex flex-col">
  <div class="max-w-xl sticky top-8">
    <h2 class="text-3xl font-bold text-gray-900 mb-4">{title}</h2>

    <div class="bg-blue-50 border-l-4 border-primary p-6 rounded-r-lg mb-8">
      <p class="text-gray-600 text-xl">{description}</p>
    </div>
    
  </div>
</div>