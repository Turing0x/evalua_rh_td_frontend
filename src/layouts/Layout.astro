---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="HR Digital Impact Assessment - Evaluate your HR's contribution to digital transformation" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--accent: 37, 99, 235;
		--accent-light: 96, 165, 250;
		--accent-dark: 30, 58, 138;
	}
	html {
		font-family: system-ui, sans-serif;
		background: white;
		scroll-behavior: smooth;
	}
</style>